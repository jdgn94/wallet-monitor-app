CREATE TABLE categories (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT UNIQUE NOT NULL CHECK(LENGTH(name) <= 50),
    description TEXT CHECK(LENGTH(description) <= 150),
    icon TEXT NOT NULL,
    color TEXT NOT NULL CHECK(LENGTH(color) <= 10),
    createdAt TEXT NOT NULL DEFAULT (strftime('%s', 'now')),
    updatedAt TEXT NOT NULL
);

getAll:
SELECT
    *
FROM
    categories
ORDER BY name ASC;

getAllPaginate:
SELECT
    *
FROM
    categories
WHERE
    LOWER(name) LIKE ?
LIMIT ? OFFSET ?;

insert:
INSERT INTO
    categories(name, description, icon, color, updatedAt)
VALUES
    (?, ?, ?, ?, strftime('%s', 'now'));

update:
UPDATE
    categories
SET
    name = ?,
    description = ?,
    icon = ?,
    color = ?,
    updatedAt = strftime('%s', 'now')
WHERE
    id = ?;

getOne:
SELECT
    *
FROM
    categories
WHERE
    id = ?;
